@model IEnumerable<CNIWebApp.Models.Cni>

@{
    ViewData["Title"] = "Gestion CNI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="display-6 fw-bold text-primary">Gestion des CNI</h2>
            <p class="text-muted">Liste des citoyens enregistrés dans le système.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> Nouvel Enregistrement
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Photo</th>
                            <th>Nom & Prénom</th>
                            <th>N° CNI / Identifiant</th>
                            <th>Sexe</th>
                            <th>Lieu de Naissance</th>
                            <th>Expiration</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    @if (!string.IsNullOrEmpty(item.Image))
                                    {
                                        <img src="@item.Image" class="rounded shadow-sm" style="width: 50px; height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 60px;">
                                            <small>N/A</small>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="fw-bold">@item.Nom.ToUpper()</div>
                                    <div class="text-muted small">@item.Prenom</div>
                                </td>
                                <td>
                                    <div class="badge bg-info text-dark">@item.Num_cni</div>
                                    <div class="small text-muted">ID: @item.Num_identifiant</div>
                                </td>
                                <td>
                                    @if (item.Sexe == "M")
                                    {
                                        <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill">Masculin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill">Féminin</span>
                                    }
                                </td>
                                <td>@item.Lieu_naissance</td>
                                <td>
                                    <span class="text-@(item.Date_expiration < DateTime.Now ? "danger" : "success")">
                                        @item.Date_expiration.ToString("dd/MM/yyyy")
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Détails">
                                            🔍 Voir
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Modifier">
                                            ✏️
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                            🗑️
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <p class="text-muted fs-4">Aucune CNI enregistrée pour le moment.</p>
        </div>
    }
</div>

<style>
    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        padding: 1rem;
    }

    .table tbody td {
        padding: 1rem;
    }

    .btn-group .btn {
        padding: 0.4rem 0.8rem;
    }
</style>