@model CNIWebApp.Models.Cni

@{
    ViewData["Title"] = "Nouvelle CNI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-3">

    <div>

        <h2 class="display-6 fw-bold text-primary">Créer une nouvelle carte / Create a new card</h2>
        <p class="fw-normal text-secondary">Veuillez renseigner les informations pour la nouvelle carte (Tous les champs avec * sont obligatoires).</p>
        <p class="fw-normal text-secondary">Please fill in the information for the new card (All fields marked with an * are mandatory).</p>

    </div>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm p-4">
                    <h2 class="text-center mb-4">Nouvelle Carte</h2>

                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger fw-bold"></div>

                        <div class="d-flex gap-3 mb-3 w-100">
                            <div class="form-group flex-fill w-50">
                                <label asp-for="Nom" class="control-label fw-bold"></label>
                                <input asp-for="Nom" class="form-control" />
                                <span asp-validation-for="Nom" class="text-danger"></span>
                            </div>
                            <div class="form-group flex-fill w-50">
                                <label asp-for="Prenom" class="control-label fw-bold"></label>
                                <input asp-for="Prenom" class="form-control" />
                                <span asp-validation-for="Prenom" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-3 mb-3 w-100">
                            <div class="form-group flex-fill w-50">
                                <label asp-for="Pere" class="control-label fw-bold"></label>
                                <input asp-for="Pere" class="form-control" />
                                <span asp-validation-for="Pere" class="text-danger"></span>
                            </div>
                            <div class="form-group flex-fill w-50">
                                <label asp-for="Mere" class="control-label fw-bold"></label>
                                <input asp-for="Mere" class="form-control" />
                                <span asp-validation-for="Mere" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-3 mb-3 w-100">
                            <div class="form-group flex-fill">
                                <label asp-for="Date_naissance" class="control-label fw-bold"></label>
                                <input asp-for="Date_naissance" class="form-control" type="date" />
                                <span asp-validation-for="Date_naissance" class="text-danger"></span>
                            </div>
                            <div class="form-group" style="width: 150px;">
                                <label asp-for="Sexe" class="control-label fw-bold"></label>
                                <select asp-for="Sexe" class="form-control">
                                    <option value="M">Masculin</option>
                                    <option value="F">Féminin</option>
                                </select>
                                <span asp-validation-for="Sexe" class="text-danger"></span>
                            </div>
                            <div class="form-group flex-fill">
                                <label asp-for="Lieu_naissance" class="control-label fw-bold"></label>
                                <input asp-for="Lieu_naissance" class="form-control" />
                                <span asp-validation-for="Lieu_naissance" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-3 mb-3 w-100">
                            <div class="form-group flex-fill">
                                <label asp-for="Profession" class="control-label fw-bold"></label>
                                <input asp-for="Profession" class="form-control" />
                            </div>
                            <div class="form-group" style="width: 120px;">
                                <label asp-for="Taille" class="control-label fw-bold"></label>
                                <input asp-for="Taille" class="form-control" type="number" step="0.01" placeholder="ex: 1.75" />
                            </div>
                            <div class="form-group flex-fill">
                                <label asp-for="Adresse" class="control-label fw-bold"></label>
                                <input asp-for="Adresse" class="form-control" />
                            </div>
                        </div>

                        <div class="d-flex gap-3 mb-3 w-100">
                            <div class="form-group flex-fill">
                                <label asp-for="Date_delivrance" class="control-label fw-bold"></label>
                                <input asp-for="Date_delivrance" class="form-control" type="date" readonly />
                            </div>
                            <div class="form-group" style="width: 120px;">
                                <label asp-for="spsm" class="control-label fw-bold"></label>
                                <input asp-for="spsm" class="form-control" placeholder="" readonly />
                            </div>
                            <div class="form-group flex-fill">
                                <label asp-for="Date_expiration" class="control-label fw-bold"></label>
                                <input asp-for="Date_expiration" class="form-control" type="date" readonly />
                            </div>
                        </div>

                        <div class="d-flex gap-3 mb-3 w-100">
                            <div class="form-group flex-fill w-25">
                                <label asp-for="Num_cni" class="control-label fw-bold"></label>
                                <input asp-for="Num_cni" class="form-control" readonly />
                                <span asp-validation-for="Num_cni" class="text-danger"></span>
                            </div>
                            <div class="form-group flex-fill W-50">
                                <label asp-for="Poste_identification" class="control-label fw-bold"></label>
                                <input asp-for="Poste_identification" class="form-control" placeholder="Ex: OU01" />
                                <span asp-validation-for="Poste_identification" class="text-danger"></span>
                            </div>
                            <div class="form-group flex-fill w-25">
                                <label asp-for="Num_identifiant" class="control-label fw-bold"></label>
                                <input asp-for="Num_identifiant" class="form-control" readonly />
                                <span asp-validation-for="Num_identifiant" class="text-danger"></span>
                            </div>
                        </div>
                       
                        <div class="form-group mb-4">
                            <label class="control-label fw-bold text-primary">Photo d'identité</label>
                            <input type="file" name="photoFile" class="form-control" accept="image/*" />
                            <small class="text-muted">Sélectionnez une image (JPG, PNG)</small>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5">Enregistrer / Save</button>
                            <a asp-action="Index" asp-controller="Home" class="btn btn-link">Annuler</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
